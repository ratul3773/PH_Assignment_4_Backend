generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model cartItem {
  id        String   @id @default(uuid())
  cartId    String
  mealId    String
  quantity  Int
  addedAt   DateTime @default(now())
  unitPrice Float
  subtotal  Float
  cart      Cart     @relation(fields: [cartId], references: [cartId])
  meal      Meal     @relation(fields: [mealId], references: [mealId])

  @@index([cartId])
  @@map("cart_items")
}

model Cart {
  cartId     String   @id @default(uuid())
  customerId String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  cartItems cartItem[]
  customer  User     @relation(fields: [customerId], references: [id])
  @@map("carts")
}

model Category {
  categoryId String   @id @default(uuid())
  name       String   @unique
  createdAt  DateTime @default(now())

  meals Meal[]

  @@map("categories")
}

model Meal {
  mealId       String   @id @default(uuid())
  providerId   String
  categoryId   String
  name         String
  description  String
  price        Float
  imageUrl     String?
  isAvailable  Boolean  @default(true)
  diaetaryTags String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  provider     Provider @relation(fields: [providerId], references: [id])
  category     Category @relation(fields: [categoryId], references: [categoryId])

  orderItems OrderItem[]

  cartItems cartItem[]

  @@index([providerId, name])
  @@map("meals")
}

model OrderItem {
  id        String @id @default(uuid())
  orderId   String
  mealId    String
  quantity  Int
  unitPrice Float
  subtotal  Float

  order Order @relation(fields: [orderId], references: [orderId])
  meal  Meal  @relation(fields: [mealId], references: [mealId])

  @@index([orderId])
  @@map("order_items")
}

model Order {
  orderId         String        @id @default(uuid())
  customerId      String
  providerId      String
  totalAmount     Float
  deliveryAddress String
  paymentStatus   PaymentStatus @default(PENDING)
  paymentMethod   PaymentMethod @default(CASH_ON_DELIVERY)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  provider        Provider      @relation(fields: [providerId], references: [id])
  
  customer        User          @relation(fields: [customerId], references: [id])
  orderItems OrderItem[]
  reviews    Review[]

  @@index([customerId])
  @@index([orderId])
  @@map("orders")
}

enum Role {
  CUSTOMER
  PROVIDER
  ADMIN
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum PaymentMethod {
  CASH_ON_DELIVERY
  CREDIT_CARD
  DIGITAL_WALLET
}

model Provider {
  id             String   @id @default(uuid())
  providerId     String   @unique
  provider       User     @relation(fields: [providerId], references: [id])
  restaurantName String   @unique
  description    String
  cuisineType    String
  address        String
  contact        String
  email          String   @unique
  deliveryFee    Float
  openingHours   Json?
  isOpen         Boolean  @default(true)
  logoUrl        String?
  bannerUrl      String?
  updatedAt      DateTime @updatedAt
  minOrderAmount Float    @default(0.0)
  isApproved     Boolean  @default(false)
  rating         Float    @default(0.0)
  totalReviews   Int      @default(0)
  createdAt      DateTime @default(now())

  orders          Order[]
  meals           Meal[]
  reviews         Review[]

  @@index([restaurantName])
  @@map("providers")
}

